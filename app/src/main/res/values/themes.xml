<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movieapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CC121212</item>
        <item name="colorPrimaryVariant">#CC121212</item>
        <item name="colorOnPrimary">#CCFFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Movieapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#121212</item>

    </style>

    <style name="Theme.Movieapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">#000000</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">#CCFFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
    <style name="ThemeOverlay.AppTheme.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- popup menu background - NEVER "android:background" !!! in themes -->
        <item name="android:colorBackground">#000000</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">#CCFFFFFF</item>
        <item name="android:colorPrimary">#005555</item>
        <item name="android:colorPrimaryDark">#003333</item>
    </style>

    <style name="Theme.Movieapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:colorBackground">#000000</item>
    <!-- popup menu item text color -->
    <item name="android:textColorPrimary">#CCFFFFFF</item>
        <item name="android:colorPrimary">#005555</item>
        <item name="android:colorPrimaryDark">#003333</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#CCFFFFFF</item>
        <item name="android:background">#CC121212</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:textColorPrimary">#CCFFFFFF</item>
    </style>

</resources>